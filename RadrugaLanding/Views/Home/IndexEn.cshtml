    <meta name="robots" content="index,follow">
    <meta name="author" content="Vladimir Shchur">
    <meta name="viewport" content="width=device-width, initial-scale=1.01, maximum-scale=1.01'" />
    <title>Radruga offline RPG</title>
    <link rel="shortcut icon" href="/favicon.ico?v=1" />
    <meta property="og:title" content="Radruga - free offline RPG" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="http://radruga.com/" />
    <meta property="og:description" content="Searching for good friends? Find them while playing Radruga. But be prepared for real missions!" />
    <meta property="og:image" content="http://radruga.com/Content/images/radruga_logo.png" />
    <script>
        if (!document.implementation.hasFeature("http://www.w3.org/TR/SVG11/feature#Mask", "1.1") ||
